# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default charset
charset = utf-8

# Unix-style newlines. A newline ending every file. No trailing whitespaces
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Double whitespaces are displayed as newline in Markdown ;-)
[*.md]
trim_trailing_whitespace = false
